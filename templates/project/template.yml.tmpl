Transform: 'AWS::Serverless-2016-10-31'
Resources:
  {{- range $r, $func := .Functions }}{{ range $f := $func }}
  {{$f.Handler}}{{$r}}Function:
    Type: 'AWS::Serverless::Function'
    Properties:
      Runtime: go1.x
      Handler: {{$f.Handler}}
      CodeUri: ./functions/{{if $r}}{{$r}}/debug{{else}}{{$f.Handler}}/debug{{end}} 
      Events:
        {{$f.Handler}}{{$r}}Api:
            Type: Api
            Properties:
                Path: /{{$f.Path}}
                Method: {{$f.Method}}
  {{- end }}{{ end }}